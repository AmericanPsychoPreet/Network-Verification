{
      "name": "EXON ROBOT",
      "description": "A Telegram group management bot.",
      "logo": "https://telegra.ph/file/550a1524598af2578cbf3.jpg", 
      "keywords": [
         "telegram",
         "anime",
         "group",
         "manager",
         "Exon"
      ],   
   "repository": "https://github.com/NoobStark-11/Network-Verification-Bot",
   "addons": [
      {
         "options": {
            "version": "12"
         },
         "plan": "heroku-postgresql"
      }
   ],
    "env": {
        "API_HASH": {
            "description": "Your API_HASH, Get it from https://my.telegram.org/"
        },
        "API_ID": {
            "description": "Your API_ID, Get it from https://my.telegram.org/"
        },
        "ADMINS": {
            "description": "list of Auth user Id who can access bot without password and have rights to use admin commands",
            "required": true
        },        
        "TOKEN": {
            "description": "Get it from @BotFather"
            "required": true
        },       
        "TOS_LINK": {
            "description": "your network's terms and conditions link",
            "required": true
        },
        "VERIFICATION_CHANNEL_ID": {
            "description": "your verification channel integer id where bot will send filled forms",
            "required": true
        },
        "VERIFICATION_CHANNEL_USERNAME": {
            "description": "your verification channel username without @ where bot will send filled forms"
        },
        "ENV": {
            "description": "Set it to anything to enable configuration by environment variables.",
            "value": "ANYTHING"
        },
        "NETWORK_NAME": {
            "description": "your network name ",
            "required": true
        },
        "HQ_USERNAME": {
            "description": "your headquarters username without @ .",
            "required": false
        },
        "NETWORK_USERNAME": {
            "description": "your network's username without @ .",
            "required": false
        },
        "NETWORK_IMG": {
            "description": "give the telegraph link of your network logo ",
            "required": false
        },
       "HQ_ID": {
            "description": "your headquarter's integer id",
            "required": true
        }
    },   
      "buildpacks": [
    {
      "url": "https://github.com/heroku/heroku-buildpack-python"
    },
    {
      "url": "https://github.com/jonathanong/heroku-buildpack-ffmpeg-latest"
    }
  ]
}
